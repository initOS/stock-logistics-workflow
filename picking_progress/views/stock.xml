<?xml version="1.0"?>
<openerp>
    <data>
        <record id="stock_picking_tree_progress" model="ir.ui.view">
            <field name="name">stock.picking.progress</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.vpicktree" />
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='state']" position="before">
                        <field name="progress" widget="progressbar" />
                    </xpath>
                </data>
            </field>
        </record>

        <record id="view_picking_form_progress" model="ir.ui.view">
            <field name="name">stock.picking.progress</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form" />
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='name']" position="after">
                        <field name="progress" widget="progressbar" class="oe_right" />
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</openerp>
